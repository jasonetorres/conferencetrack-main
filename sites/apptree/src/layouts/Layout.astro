---
interface Props {
    title: string;
    showNavbar?: boolean;
}

const { title, showNavbar = false } = Astro.props;
const currentYear = new Date().getFullYear();
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="applinks - Your links, one place." />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title} | applinks</title>
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
        <style is:global>
            :root {
                /* --- Appwrite Inspired Dark Theme --- */
                --bg-color: #0c0d11; /* Very dark, almost black */
                --card-bg: #16181e; /* Darker gray for cards */
                --card-border: #2c2f3a; /* Subtle border */
                --text-color: #e4e4e7; /* Light gray (Zinc 200) */
                --text-secondary-color: #a1a1aa; /* Gray (Zinc 400) */
                --primary-color: #f02e65; /* Appwrite Pink */
                --primary-hover-color: #ff4d79; /* Brighter Pink for hover */
                --secondary-color: #4b5563; /* Gray 600 */
                --secondary-hover-color: #6b7280; /* Gray 500 */
                --danger-color: #ef4444; /* Red 500 */
                --danger-hover-color: #f87171; /* Red 400 */
                --input-bg: #27272a; /* Zinc 800 */
                --input-border: #52525b; /* Zinc 600 */
                --focus-ring-color: #f02e6566; /* Pink with opacity */

                --border-radius: 0.5rem; /* 8px */
                --box-shadow: 0 10px 15px -3px rgb(0 0 0 / 0.3), 0 4px 6px -4px rgb(0 0 0 / 0.3);
                --container-max-width: 600px;

                color-scheme: dark; /* Hint to browser for native elements */
            }

            *, *::before, *::after {
                box-sizing: border-box;
            }

            body {
                margin: 0;
                font-family: 'Inter', sans-serif;
                background-color: var(--bg-color);
                color: var(--text-color);
                display: flex;
                flex-direction: column;
                align-items: center;
                min-height: 100vh;
                padding: 1rem;
                font-size: 16px;
                -webkit-font-smoothing: antialiased;
                -moz-osx-font-smoothing: grayscale;
            }

            main {
                width: 100%;
                max-width: var(--container-max-width);
                flex-grow: 1;
            }

            footer {
                width: 100%;
                max-width: var(--container-max-width);
                text-align: center;
                padding: 1.5rem 0;
                font-size: 0.875rem;
                color: var(--text-secondary-color);
                margin-top: auto;
            }
             footer a { color: var(--text-secondary-color); }
             footer a:hover { color: var(--primary-color); }


            h1, h2, h3 {
                color: #ffffff; /* Brighter white for headings */
                margin-top: 0;
                margin-bottom: 1rem;
                font-weight: 700;
            }
            h1 { font-size: 2rem; text-align: center; margin-bottom: 1.5rem;}
            h2 { font-size: 1.5rem; text-align: center; margin-bottom: 1.25rem;}
            h3 { font-size: 1.25rem; margin-bottom: 0.75rem;}


             a {
                color: var(--primary-color);
                text-decoration: none;
                font-weight: 500;
                transition: color 0.2s ease;
             }

             a:hover {
                color: var(--primary-hover-color);
                text-decoration: none;
             }

            .card {
                background-color: var(--card-bg);
                border-radius: var(--border-radius);
                /* Using border instead of heavy shadow */
                border: 1px solid var(--card-border);
                padding: 2rem; /* More padding */
                margin-bottom: 1.5rem;
                box-shadow: none; /* Removed shadow */
            }

            .link-card {
                 display: block;
                 text-align: center;
                 font-size: 1.125rem;
                 font-weight: 500;
                 padding: 1.25rem; /* More padding */
                 background-color: var(--card-border); /* Darker, subtle */
                 color: var(--text-color);
                 border-radius: var(--border-radius);
                 border: 1px solid var(--card-border);
                 transition: background-color 0.2s ease, transform 0.2s ease, border-color 0.2s ease;
            }

            .link-card:hover {
                background-color: var(--primary-color);
                color: white;
                border-color: var(--primary-color);
                transform: translateY(-3px) scale(1.01);
                text-decoration: none;
            }

            form {
                display: flex;
                flex-direction: column;
                gap: 1.25rem; /* Increased gap */
            }

            label {
                font-weight: 500;
                margin-bottom: 0.5rem; /* Increased margin */
                display: block;
                color: var(--text-secondary-color);
            }
             label + small {
                color: var(--text-secondary-color);
                font-size: 0.875rem;
                display: block;
                margin-top: -0.75rem; /* Pull up a bit */
             }
             small a {
                 font-size: 0.875rem;
             }

            input[type="text"],
            input[type="email"],
            input[type="password"],
            input[type="url"],
            textarea {
                width: 100%;
                padding: 0.875rem 1rem; /* Adjusted padding */
                border: 1px solid var(--input-border);
                border-radius: var(--border-radius);
                font-size: 1rem;
                font-family: 'Inter', sans-serif;
                background-color: var(--input-bg);
                color: var(--text-color);
                transition: border-color 0.2s ease, box-shadow 0.2s ease;
            }
            input::placeholder, textarea::placeholder {
                color: var(--text-secondary-color);
                opacity: 0.7;
            }
            textarea {
                min-height: 100px;
                resize: vertical;
            }

            input:focus, textarea:focus {
                outline: none;
                border-color: var(--primary-color);
                box-shadow: 0 0 0 3px var(--focus-ring-color);
            }
            input[readonly] {
                 background-color: #374151; /* Gray 700 */
                 cursor: not-allowed;
                 opacity: 0.7;
            }


            button, .button {
                display: inline-block;
                background-color: var(--primary-color);
                color: white;
                padding: 0.875rem 1.75rem; /* Adjusted padding */
                border: none;
                border-radius: var(--border-radius);
                font-size: 1rem;
                font-weight: 700; /* Bolder */
                cursor: pointer;
                text-align: center;
                transition: background-color 0.2s ease, transform 0.2s ease;
                text-decoration: none; /* For .button links */
            }

            button:hover, .button:hover {
                background-color: var(--primary-hover-color);
                transform: translateY(-2px);
                text-decoration: none;
                color: white;
            }
            button:disabled {
                background-color: var(--secondary-color);
                cursor: not-allowed;
                opacity: 0.6;
                transform: translateY(0);
            }

            button.secondary, .button.secondary {
                background-color: var(--secondary-color);
                color: var(--text-color);
            }
            button.secondary:hover, .button.secondary:hover {
                background-color: var(--secondary-hover-color);
                 color: white;
            }

            button.danger, .button.danger {
                background-color: var(--danger-color);
            }
            button.danger:hover, .button.danger:hover {
                background-color: var(--danger-hover-color);
            }

            .form-actions {
                display: flex;
                gap: 1rem;
                justify-content: center;
                margin-top: 1rem;
            }

            .message {
                padding: 1rem;
                border-radius: var(--border-radius);
                margin: 1rem 0;
                text-align: center;
                border-width: 1px;
                border-style: solid;
            }
            .message.error {
                background-color: #3f2a2a; color: #fca5a5; border-color: var(--danger-color);
            }
            .message.success {
                background-color: #214232; color: #86efac; border-color: #16a34a;
            }

            .profile-pic-container {
                display: flex;
                flex-direction: column;
                align-items: center;
                gap: 1rem;
                margin-bottom: 2rem; /* More space */
            }
            .profile-pic-preview, .profile-pic-placeholder {
                width: 128px; /* Slightly larger */
                height: 128px;
                border-radius: 50%;
                background-color: var(--input-bg);
                background-size: cover;
                background-position: center;
                border: 4px solid var(--card-bg); /* Use card bg for border */
                box-shadow: 0 0 15px rgba(0,0,0,0.5); /* Add glow */
                display: flex;
                align-items: center;
                justify-content: center;
                font-size: 3.5rem;
                color: var(--text-secondary-color);
                font-weight: 700;
            }

            .dashboard-links-list {
                list-style: none;
                padding: 0;
                display: flex;
                flex-direction: column;
                gap: 0.75rem; /* Use gap */
            }
            .dashboard-links-list li {
                display: flex;
                justify-content: space-between;
                align-items: center;
                padding: 1rem 1.25rem;
                background-color: var(--input-bg); /* Use input bg */
                border-radius: var(--border-radius);
                border: 1px solid var(--card-border);
                margin-bottom: 0; /* Remove margin, use gap */
            }
            .dashboard-links-list li .link-info {
                flex-grow: 1;
                overflow: hidden;
                text-overflow: ellipsis;
                white-space: nowrap;
                margin-right: 1rem;
            }
             .dashboard-links-list li .link-info .link-title {
                font-weight: 500;
                 color: var(--text-color);
             }
             .dashboard-links-list li .link-info .link-url {
                font-size: 0.875rem;
                color: var(--text-secondary-color);
                display: block;
             }
             .dashboard-links-list li button.danger {
                padding: 0.375rem 0.75rem;
                font-size: 0.875rem;
                font-weight: 500; /* Less bold */
             }
             .link-card, .dashboard-links-list li {
                display: flex;
                align-items: center;
                text-align: left; /* Adjust alignment */
            }

            .link-card .link-icon,
            .dashboard-links-list li .link-icon {
                font-size: 1.5rem; /* Icon size */
                margin-right: 1rem; /* Space between icon and text */
                width: 30px; /* Fixed width for alignment */
                text-align: center;
                flex-shrink: 0; /* Prevent icon from shrinking */
                transition: color 0.2s ease;
            }

             .link-card .link-text {
                 flex-grow: 1;
                 text-align: center; /* Center text within its space */
             }


            .link-card:hover .link-icon {
               color: white; /* Ensure icon is white on hover */
            }
             .link-card:hover .link-text {
                 color: white;
             }

            .dashboard-links-list li .link-icon {
                font-size: 1.25rem; /* Slightly smaller for dashboard */
                color: var(--text-secondary-color);
            }
            /* Add these to your existing <style is:global> in Layout.astro */

.modal-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.7); /* Darker overlay */
    display: none; /* Hidden by default */
    justify-content: center;
    align-items: center;
    z-index: 1000;
    padding: 1rem;
}

.modal-overlay.active {
    display: flex;
}

.modal-content {
    background-color: var(--card-bg);
    padding: 2rem;
    border-radius: var(--border-radius);
    border: 1px solid var(--card-border);
    box-shadow: 0 10px 25px -5px rgb(0 0 0 / 0.5), 0 8px 10px -6px rgb(0 0 0 / 0.5);
    max-width: 90%;
    max-height: 90vh;
    overflow-y: auto;
    position: relative;
    animation: fadeInModal 0.3s ease-out;
}

@keyframes fadeInModal {
    from { opacity: 0; transform: translateY(-20px); }
    to { opacity: 1; transform: translateY(0); }
}

.modal-content h2, .modal-content h3 {
    margin-top: 0;
    color: #ffffff; /* Brighter white for modal titles */
}

.modal-close-button {
    position: absolute;
    top: 1rem;
    right: 1rem;
    background: none;
    border: none;
    font-size: 1.75rem;
    color: var(--text-secondary-color);
    cursor: pointer;
    padding: 0.25rem 0.5rem;
    line-height: 1;
}
.modal-close-button:hover {
    color: var(--text-color);
}

/* Specific modal sizes */
#preview-modal .modal-content {
    width: 800px; /* Adjust as needed */
    max-width: 95%;
}
#preview-modal .iframe-container { /* Re-using from previous step */
    min-height: 60vh;
}
#preview-modal iframe {
    min-height: 60vh;
}


#add-link-modal .modal-content {
    width: 500px; /* Adjust as needed */
    max-width: 95%;
}

.dashboard-actions {
    display: flex;
    gap: 1rem;
    justify-content: flex-end; /* Align to the right */
    padding: 1rem;
    background-color: var(--card-bg);
    border-radius: var(--border-radius);
    border: 1px solid var(--card-border);
    margin-bottom: 1.5rem;
}
.text-center {
    text-align: center;
}

/* Your button styles should ensure it behaves like an inline-block or block with auto margins */
button, .button {
    display: inline-block; /* This allows text-align: center on parent to work */
    /* ... other button styles from your dark theme ... */
    background-color: var(--danger-color); /* For .button.danger */
    color: white;
    padding: 0.875rem 1.75rem;
    border: none;
    border-radius: var(--border-radius);
    font-size: 1rem;
    font-weight: 700;
    cursor: pointer;
    text-align: center; /* Text inside the button */
    transition: background-color 0.2s ease, transform 0.2s ease;
    text-decoration: none;
}

button.danger:hover, .button.danger:hover {
    background-color: var(--danger-hover-color);
}

        </style>
    </head>
    <body>
        {/* Navbar can be added back here if needed */}
        <main>
            <slot />
        </main>
        <footer>
            &copy; {currentYear} <a href="/" target="_blank">appwrite and astro</a>.
        </footer>
    </body>
</html>