---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
---

<Layout title="Welcome">
    <div class="card text-center">
        <h1>applinks, like linktree but not sucky</h1>
        <p class="mb-4">applinks helps you create a single page to house all your important links. Perfect for social media bios, project showcases, and more!</p>
        <div class="form-actions">
            <a href="/login" class="button">Login</a>
            <a href="/signup" class="button secondary">Sign Up</a>
        </div>
    </div>

    <div class="card text-center mt-4">
        <h2>How it Works</h2>
        <ol style="text-align: left; max-width: 400px; margin: 1rem auto;">
            <li>Sign up for a free account.</li>
            <li>Add your profile information and links.</li>
            <li>Share your unique applinks page!</li>
        </ol>
    </div>
</Layout>
